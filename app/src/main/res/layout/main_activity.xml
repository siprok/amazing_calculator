<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/expression_input"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="2.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/expression_output"
        android:background="@color/design_default_color_secondary_variant"
        android:gravity="end|bottom"
        android:textSize="26sp"
        tools:text="input expression"

        />

    <TextView
        android:id="@+id/expression_output"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="2.5dp"
        android:background="@color/teal_200"
        android:gravity="end|center_vertical"
        android:textSize="26sp"
        tools:text="output expression"
        app:layout_constraintTop_toBottomOf="@id/expression_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <!--Settings buttons-->
    <ImageView
        android:id="@+id/button_settigns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/expression_input"
        app:layout_constraintTop_toTopOf="@id/expression_input"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_settings_24"
        />

    <ImageView
        android:id="@+id/button_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/expression_input"
        app:layout_constraintTop_toBottomOf="@id/button_settigns"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_history_24"
        />
        <!--Button section start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/expression_output"
        app:layout_constraintBottom_toBottomOf="parent">
            <!--row1_start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/button_pow"
                    android:text="^"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                     />

                <TextView
                    android:id="@+id/button_sqrt"
                    android:text="âˆš"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                     />

                <TextView
                    android:id="@+id/button_left_bracket"
                    android:text="("
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />

                <TextView
                    android:id="@+id/button_right_bracket"
                    android:text=")"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />
        </LinearLayout>
            <!--row2_start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/button_mul"
                    android:text="*"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />

                <TextView
                    android:id="@+id/button_div"
                    android:text="/"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                     />

                <TextView
                    android:id="@+id/button_plus"
                    android:text="+"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />

                <TextView
                    android:id="@+id/button_minus"
                    android:text="-"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />
        </LinearLayout>
            <!--row3_start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/button_seven"
                    android:text="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />

                <TextView
                    android:id="@+id/button_eight"
                    android:text="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />

                <TextView
                    android:id="@+id/button_nine"
                    android:text="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />

                <ImageView
                    android:id="@+id/button_backspace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_backspace_24"
                    android:scaleType="center"
                    android:padding="25dp"
                    android:background="?attr/selectableItemBackground"

                    />
        </LinearLayout>
            <!--row4_start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/button_four"
                    android:text="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/button_five"
                    android:text="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/button_six"
                    android:text="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/button_cleaner"
                    android:text="C"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                     />
        </LinearLayout>
            <!--row5_start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/button_one"
                    android:text="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/button_two"
                    android:text="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/button_three"
                    android:text="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/button_clean_memory"
                    android:text="CM"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                     />
        </LinearLayout>
            <!--row6_start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/button_point"
                    android:text="."
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/button_zero"
                    android:text="0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/button_equal"
                    android:text="="
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/button_memory"
                    android:text="M"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                     />
        </LinearLayout>
                <!-- Button section end-->

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>